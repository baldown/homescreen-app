<html>
  <head>
    <title>[% app_name %]</title>
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <link rel="apple-touch-icon-precomposed" href="[% app_icon || 'static/app-icon.png' %]"/>
  </head>
  <body onload="app_check();">
    <style>
      .fullscreen {
        position: absolute;
        top: 0;
        left: 0;
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
      }
      div.full_overlay {
        background-color: #000000;
      }
      div.app {
        display: none;
      }
      div.load {
        background-color: #eeeeee;
        text-align: center;
      }
      div.load .fa-spinner {
        margin-top: 100px;
      }
      div.alert {
        display: none;
        position: absolute;
        bottom: 5px;
        text-align: center;
        left: 10%;
        right: 10%;
        border: 1px solid #444444;
        border-radius: 6px;
        font-size: 16px;
        padding:  0px 10px;
        background-color: #ffffff;
      }
    </style>
    <div class="load fullscreen">
      <i class="fa fa-spinner fa-spin fa-3x"></i>
    </div>
    <div class="app fullscreen">
      <iframe class="fullscreen" frameborder="0" src="/"></iframe>
    </div>
    <div class="alert">
      <p>
      To add [% app_name %] to your Home Screen, click the button below and then "Add to Home Screen."
      </p>
      <i class="fa fa-chevron-down fa-3x"></i>
    </div>
    <script>
     function app_check() {
        if (window.navigator.standalone) {
          jQuery('.app').show();
          jQuery('.load').hide();
        } else {
          jQuery('.fa-spinner').hide();
          jQuery('.alert').show();
        }
     }
    </script>
  </body>
</html>
